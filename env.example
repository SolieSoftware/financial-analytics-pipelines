# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/financial_analytics
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# API Keys (replace with your actual keys)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
QUANDL_API_KEY=your_quandl_key_here
YAHOO_FINANCE_API_KEY=your_yahoo_key_here

# Prefect Configuration
PREFECT_API_URL=http://localhost:4200/api
PREFECT_SERVER_HOST=0.0.0.0
PREFECT_SERVER_PORT=4200

# Data Storage
DATA_STORAGE_PATH=./data
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
MODELS_PATH=./models

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
SENTRY_DSN=your_sentry_dsn_here

# Pipeline Configuration
DEFAULT_BATCH_SIZE=1000
MAX_RETRIES=3
RETRY_DELAY=60

# Financial Data Sources
MARKET_DATA_SOURCES=yfinance,alpha_vantage
DEFAULT_CURRENCY=USD
TIMEZONE=UTC

# Security
SECRET_KEY=your_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Development
DEBUG=false
ENVIRONMENT=development 